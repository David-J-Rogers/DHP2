<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:id="@+id/milestoneLayout">

    <TextView
        android:id="@+id/milestoneStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's get started!"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/exercise1Button"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/milestoneStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 1"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/exercise2Button"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 2"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/exercise3Button"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise2Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 3"
        android:textSize="20sp"/>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/assessButton"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise3Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 4"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Done for the day!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
