<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <!-- Text box at the top -->
    <TextView
        android:id="@+id/milestoneStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to complete milestone 1?"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Your existing buttons below -->
    <!-- Add Exercise 1 Button -->
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/exercise1Button"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/milestoneStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 1" />

    <!-- Add Exercise 2 Button -->
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/exercise2Button"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 2" />

    <!-- Add Exercise 3 Button -->
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/exercise3Button"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise2Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Exercise 3" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/assessButton"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise3Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Assessment" />

</androidx.constraintlayout.widget.ConstraintLayout>
