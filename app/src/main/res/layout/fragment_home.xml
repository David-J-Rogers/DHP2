<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Add Exercise 1 Button -->
    <Button
    android:id="@+id/exercise1Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Exercise 1" />

    <!-- Add Exercise 2 Button -->
    <Button
    android:id="@+id/exercise2Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toBottomOf="@id/exercise1Button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Exercise 2" />

    <!-- Add Exercise 3 Button -->
    <Button
    android:id="@+id/exercise3Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toBottomOf="@id/exercise2Button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Exercise 3" />

    <Button
        android:id="@+id/assessButton"
        android:layout_width="375dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/exercise3Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Assessment" />



</androidx.constraintlayout.widget.ConstraintLayout>