<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >


    <TextView
        android:id="@+id/exerciseStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to make progress today?"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
    android:layout_marginTop="16dp"
    android:id="@+id/milestone1Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/exerciseStatusTextView"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Milestone 1"
    android:textSize="20sp"/>

    <Button
    android:layout_marginTop="16dp"
    android:id="@+id/milestone2Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toBottomOf="@id/milestone1Button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Milestone 2"
    android:textSize="20sp"/>

    <Button
    android:layout_marginTop="16dp"
    android:id="@+id/milestone3Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toBottomOf="@id/milestone2Button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Milestone 3"
    android:textSize="20sp"/>

    <Button
    android:layout_marginTop="16dp"
    android:id="@+id/milestone4Button"
    android:layout_width="375dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toBottomOf="@id/milestone3Button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="Milestone 4"
    android:textSize="20sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>